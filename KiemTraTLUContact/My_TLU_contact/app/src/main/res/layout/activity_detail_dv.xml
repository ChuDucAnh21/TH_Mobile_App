<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail_dv_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary">

            <ImageButton
                android:id="@+id/dt_arrowDV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/baseline_arrow_back_ios_new_24" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="406dp"
            android:layout_height="544dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="625dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="197dp"
                    app:srcCompat="@drawable/ic_unit_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_sort"
                        android:gravity="center"
                        android:text="ID" />

                    <TextView
                        android:id="@+id/dt_idDV"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="ID" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_staff_directory"
                        android:gravity="center"
                        android:text="Name" />

                    <TextView
                        android:id="@+id/dt_nameDV"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/outline_call_24"
                        android:gravity="center"
                        android:text="Phone" />

                    <TextView
                        android:id="@+id/dt_sdtDV"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="SĐT" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/baseline_fmd_good_24"
                        android:gravity="center"
                        android:text="Adress" />

                    <TextView
                        android:id="@+id/dt_diachiDV"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Dia chi" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/baseline_email_24"
                        android:gravity="center"
                        android:text="Email" />

                    <TextView
                        android:id="@+id/dt_emailDV"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Email" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/baseline_public_24"
                        android:gravity="center"
                        android:text="Website" />

                    <TextView
                        android:id="@+id/dt_websiteDV"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="web site" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="106dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/btn_messDV"
                            android:layout_width="138dp"
                            android:layout_height="55dp"
                            android:backgroundTint="#5D75F4"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.437"
                            app:layout_constraintStart_toEndOf="@+id/btn_callDV"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.512"
                            app:srcCompat="@drawable/baseline_sms_24" />

                        <ImageButton
                            android:id="@+id/btn_callDV"
                            android:layout_width="140dp"
                            android:layout_height="55dp"
                            android:layout_marginStart="48dp"
                            android:backgroundTint="#5D75F4"
                            app:circularflow_radiusInDP="100dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.512"
                            app:srcCompat="@drawable/outline_call_24" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_suaItemDV"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#03A9F4"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="Sửa" />

            <Button
                android:id="@+id/btn_xoaItemDV"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#F63C3C"
                android:drawingCacheQuality="auto"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="Xóa" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>