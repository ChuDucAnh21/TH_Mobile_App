<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Login.detail_user_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="250dp"
            android:layout_height="193dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_staff_directory" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông Tin Người Dùng" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_sort"
                android:gravity="center"
                android:text="ID" />

            <TextView
                android:id="@+id/dt_iduser"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="ID" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_staff_directory"
                android:gravity="center"
                android:text="Tên" />

            <TextView
                android:id="@+id/dt_nameuser"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Tên
" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/outline_call_24"
                android:gravity="center"
                android:text="SĐT
" />

            <TextView
                android:id="@+id/dt_sdtuser"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="SĐT" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/textView78"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/baseline_date_range_24"
                android:gravity="center"
                android:text="Ngày Sinh
" />

            <TextView
                android:id="@+id/dt_dateuser"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="SĐT" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/baseline_fmd_good_24"
                android:gravity="center"
                android:text="Địa Chỉ" />

            <TextView
                android:id="@+id/dt_diachiuser"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Dia chi" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/baseline_email_24"
                android:gravity="center"
                android:text="Email" />

            <TextView
                android:id="@+id/dt_emailuser"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Email" />
        </LinearLayout>

        <Button
            android:id="@+id/btnbackuser"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:backgroundTint="#5163ED"
            android:gravity="center"
            android:text="Quay Lại" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>