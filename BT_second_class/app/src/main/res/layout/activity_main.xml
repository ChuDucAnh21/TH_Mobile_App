<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="The Hungry Developer" />

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_starter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_starter"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/_04_main" />

            <TextView
                android:id="@+id/txt_starter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Starter" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_main_course"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/crd_starter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        tools:ignore="ExtraText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_starter_second"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/_04_starter" />

            <TextView
                android:id="@+id/txt_main_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main Course" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>